<Window x:Class="HelloWorldApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorldApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="40" Margin="283,74,0,0" TextWrapping="Wrap" Text="Is Engineering-66 the worst or best group" VerticalAlignment="Top" Width="228"/>
        <RadioButton x:Name="Worst" Content="They are the worst" HorizontalAlignment="Left" Margin="283,140,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1" />
        <RadioButton x:Name="Great" Content="They are Great" HorizontalAlignment="Left" Margin="426,143,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked" IsChecked="true"/>
        <Button x:Name="Confirm" Content="Button" HorizontalAlignment="Left" Margin="370,184,0,0" VerticalAlignment="Top" Width="75" Click="Confirm_Click"/>


    </Grid>
</Window>
